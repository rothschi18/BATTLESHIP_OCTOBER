<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.battleship" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Start_Page"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Battleship"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Select_Ship_Positions"
            android:label="@string/title_activity_select__ship__positions"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Select_Configs_2Player"
            android:label="@string/title_activity_select__configs_2_player" >
        </activity>
    </application>

</manifest>
